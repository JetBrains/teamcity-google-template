imports:
- path: database.jinja
- path: network.jinja
- path: service-account.jinja
- path: storage.jinja
- path: teamcity.jinja
- path: virtual-machine.jinja
- path: waiter.jinja

info:
  title: TeamCity Template
  author: JetBrains s.r.o.
  description: Creates a TeamCity server and build agent.

required:
- zone

properties:
  zone:
    description: Zone in which this deployment will run
    type: string
    default: us-central1-a
    x-googleProperty:
      type: GCE_ZONE

  version:
    description: The version of TeamCity
    type: string
    default: "2019.1.4"

  installationSize:
    description: The size of installation
    type: string
    default: medium
    enum:
    - small
    - medium
    - large

  serviceAccount:
    description: The service account e-mail
    type: string

  createStorageBucket:
    description: Allows to create storage bucket to store build artifacts
    type: boolean
    default: true

  network:
    type: string
    description: Self link for a GCE network in which TeamCity instance will run.
    x-googleProperty:
      type: GCE_NETWORK

  ipCidrRange:
    type: string
    description: Internal IP subent range for VM(s)
    default: 10.241.0.0/24

  ipAddress:
    type: string
    description: External IP address to attach to TeamCity server
    
  secureIps:
    type: list 
    description: a list of IP CIDR addresses that will be allowed remote access to the server 
    default: ["0.0.0.0/0"]

  domainName:
    type: string
    description: Domain name for TeamCity server

  domainOwnerEmail:
    type: string
    description: E-mail address of domain owner used while issuing SSL certificate for TeamCity server

outputs:
  teamcityUrl:
    type: string
  teamcityIpAddress:
    type: string
